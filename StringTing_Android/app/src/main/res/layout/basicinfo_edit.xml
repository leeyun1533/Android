<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@android:color/transparent"
                android:padding="0sp"
                android:paddingTop="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/backbtn"


                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingTop="10dp"
                android:text="기본정보입력"
                android:textSize="20dp" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_gravity="center"

        >

        <ImageView
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/form_progressbar2" />


        <TextView
            android:id="@+id/text_id"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:paddingRight="13dp"
            android:text="성별"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:gravity="center"
           >

            <info.hoang8f.android.segmented.SegmentedGroup
                xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
                android:id="@+id/sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:orientation="horizontal"
                segmentedgroup:sc_border_width="2dp"
                segmentedgroup:sc_corner_radius="10dp">

                <RadioButton
                    android:id="@+id/RadioMan"
                    style="@style/RadioButton"
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:text="남자" />

                <RadioButton
                    android:id="@+id/RadioWoman"
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:text="여자"
                    style="@style/RadioButton"
                    />

            </info.hoang8f.android.segmented.SegmentedGroup>

        </LinearLayout>

        <TextView
            android:id="@+id/text_id2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="병역"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:gravity="center">

            <info.hoang8f.android.segmented.SegmentedGroup
                xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
                android:id="@+id/RadioArmy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:orientation="horizontal"
                segmentedgroup:sc_border_width="2dp"
                segmentedgroup:sc_corner_radius="10dp"
                >

                <RadioButton
                    android:id="@+id/Complete"
                    style="@style/RadioButton"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="군필" />

                <RadioButton
                    android:id="@+id/InComplete"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="미필"
                    style="@style/RadioButton"
                    />
                <RadioButton
                    android:id="@+id/Notduty"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="해당없음"
                    style="@style/RadioButton" />
            </info.hoang8f.android.segmented.SegmentedGroup>


        </LinearLayout>

        <TextView
            android:id="@+id/text_id3"
            android:layout_width="60dp"
            android:layout_height="22dp"
            android:text="커리어"
            android:textSize="20dp" />



        <EditText
                android:id="@+id/InputCarria"
                android:layout_width="325dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20dp"
                android:layout_gravity="center"/>

        <TextView
            android:id="@+id/text_id4"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="나이"
            android:textSize="20dp" />



        <EditText
            android:id="@+id/InputAge"
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="22dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/text_id5"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:text="지역"
            android:textSize="20dp" />



        <EditText
            android:id="@+id/InputLocation"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/text_id6"
            android:layout_width="60dp"
            android:layout_height="22dp"
            android:text="키"
            android:textSize="20dp" />



        <EditText
            android:id="@+id/InputTall"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/text_id7"
            android:layout_width="60dp"
            android:layout_height="22dp"
            android:text="혈액형"
            android:textSize="20dp" />



        <EditText
            android:id="@+id/InputBlood"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20dp"
            android:layout_gravity="center"/>


        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:onClick="onClick_login_check"
            android:text="다음"
            android:textSize="20sp" />


    </LinearLayout>


</LinearLayout>