<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <LinearLayout
        android:id="@+id/sb"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@android:color/transparent"
                android:onClick="onClick_back"
                android:padding="0sp"
                android:paddingTop="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/backbtn"


                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingTop="10dp"
                android:text="기본정보입력"
                android:textSize="20dp" />

        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/progress_bar_img"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/sb"
        android:layout_gravity="center"
        android:src="@drawable/form_progressbar2"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/progress_bar_img"
        android:layout_above="@+id/next_btn"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="1. 소속 인증 (선택 사항)"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/button5"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginBottom="10dp"
                        android:text="소속인증사진\n(선택)\n프리미엄 인증회원이 되어보세요! 자신의 커리어 및 소속을 인증해줄 수 있는 학생증, 사원증, 명함등을 업로드해주세요! String 심사를 통과하면 더욱 더 믿음가는 회원과 매칭이 됩니다!" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2. 사진 입력 (필수 사항)"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:text="상대방에게 보여질 사진이에요! 정성스럽게 올려주세요! 본인의 사진이 아니거나, 알아보기 힘든 사지일 경우 반려사유가 될 수 있습니다 # 최소 3장 이상 " />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/photo1"
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:layout_weight="1"
                                android:onClick="onClick" />

                            <ImageView
                                android:id="@+id/photo2"
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:layout_weight="1"
                                android:onClick="onClick_imageUpload2" />

                            <ImageView
                                android:id="@+id/photo3"
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:layout_weight="1"
                                android:onClick="onClick_imageUpload3"
                                android:textSize="13dp" />

                            <ImageView
                                android:id="@+id/photo4"
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:layout_weight="1"
                                android:onClick="onClick_imageUpload4"
                                android:textSize="13dp" />

                            <ImageView
                                android:id="@+id/photo5"
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:layout_weight="1"
                                android:onClick="onClick_imageUpload5"
                                android:textSize="13dp" />

                            <ImageView
                                android:id="@+id/photo6"
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:layout_weight="1"
                                android:onClick="onClick_imageUpload6"
                                android:textSize="13dp" />

                        </LinearLayout>
                    </HorizontalScrollView>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_id"
                        android:layout_width="60dp"
                        android:layout_height="22dp"
                        android:paddingRight="13dp"
                        android:text="성별"
                        android:textSize="20dp" />

                    <info.hoang8f.android.segmented.SegmentedGroup xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal"
                        segmentedgroup:sc_border_width="2dp"
                        segmentedgroup:sc_corner_radius="10dp">

                        <RadioButton
                            android:id="@+id/RadioMan"
                            style="@style/RadioButton"
                            android:layout_width="135dp"
                            android:layout_height="wrap_content"
                            android:text="남자" />

                        <RadioButton
                            android:id="@+id/RadioWoman"
                            style="@style/RadioButton"
                            android:layout_width="135dp"
                            android:layout_height="wrap_content"
                            android:text="여자" />

                    </info.hoang8f.android.segmented.SegmentedGroup>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_id2"
                        android:layout_width="60dp"
                        android:layout_height="22dp"
                        android:paddingRight="13dp"
                        android:text="병역"
                        android:textSize="20dp" />


                    <info.hoang8f.android.segmented.SegmentedGroup xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/RadioArmy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal"
                        segmentedgroup:sc_border_width="2dp"
                        segmentedgroup:sc_corner_radius="10dp">

                        <RadioButton
                            android:id="@+id/Complete"
                            style="@style/RadioButton"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="군필" />

                        <RadioButton
                            android:id="@+id/InComplete"
                            style="@style/RadioButton"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="미필" />

                        <RadioButton
                            android:id="@+id/Notduty"
                            style="@style/RadioButton"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="해당없음" />
                    </info.hoang8f.android.segmented.SegmentedGroup>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_id3"
                        android:layout_width="60dp"
                        android:layout_height="22dp"
                        android:paddingRight="13dp"
                        android:text="커리어"
                        android:textSize="20dp" />


                    <EditText
                        android:id="@+id/InputCarrea"
                        android:layout_width="325dp"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/text_id3"
                        android:layout_gravity="center"
                        android:layout_toRightOf="@id/text_id3"
                        android:text=""
                        android:textSize="20dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_id4"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:paddingRight="13dp"
                        android:text="나이"

                        android:textSize="20dp" />

                    <Spinner
                        android:id="@+id/Spinner_age"
                        android:layout_width="325dp"
                        android:layout_height="30dp"
                        android:layout_alignTop="@+id/text_id4"
                        android:layout_gravity="center"
                        android:layout_margin="3dp"
                        android:layout_toRightOf="@+id/text_id4"
                        android:prompt="@string/age_prompt">

                    </Spinner>

                </RelativeLayout>



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_id5"
                        android:layout_width="60dp"
                        android:layout_height="22dp"
                        android:paddingRight="13dp"
                        android:text="지역"
                        android:textSize="20dp" />


                    <Spinner
                        android:id="@+id/Spinner_city"
                        android:layout_width="325dp"
                        android:layout_height="30dp"
                        android:layout_alignTop="@+id/text_id5"
                        android:layout_gravity="center"
                        android:layout_margin="3dp"
                        android:layout_toRightOf="@+id/text_id5"
                        android:prompt="@string/blood_prompt">

                    </Spinner>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_id6"
                        android:layout_width="60dp"
                        android:layout_height="22dp"
                        android:paddingRight="13dp"
                        android:text="키"
                        android:textSize="20dp" />


                    <EditText
                        android:id="@+id/InputTall"
                        android:layout_width="320dp"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/text_id6"
                        android:layout_gravity="center"
                        android:layout_toRightOf="@+id/text_id6"
                        android:digits="0123456789"
                        android:inputType="number"
                        android:text=""
                        android:textSize="20dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_id8"
                        android:layout_width="60dp"
                        android:layout_height="22dp"
                        android:text="혈액형"
                        android:textSize="20dp" />


                    <Spinner
                        android:id="@+id/Spinner_blood"
                        android:layout_width="325dp"
                        android:layout_height="30dp"
                        android:layout_alignTop="@+id/text_id8"
                        android:layout_gravity="center"
                        android:layout_margin="3dp"
                        android:layout_toRightOf="@+id/text_id8"
                        android:prompt="@string/blood_prompt">

                    </Spinner>

                </RelativeLayout>





                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_id9"
                        android:layout_width="60dp"
                        android:layout_height="22dp"
                        android:paddingRight="13dp"
                        android:text="흡연"
                        android:textSize="20dp" />

                    <info.hoang8f.android.segmented.SegmentedGroup xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/Radio_smoking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:orientation="horizontal"
                        android:layout_alignParentRight="true"
                        segmentedgroup:sc_border_width="2dp"
                        segmentedgroup:sc_corner_radius="10dp">

                        <RadioButton
                            android:id="@+id/smoking"
                            style="@style/RadioButton"
                            android:layout_width="135dp"
                            android:layout_height="wrap_content"
                            android:text="흡연" />

                        <RadioButton
                            android:id="@+id/Not_smoking"
                            style="@style/RadioButton"
                            android:layout_width="135dp"
                            android:layout_height="wrap_content"
                            android:text="비흡연" />

                    </info.hoang8f.android.segmented.SegmentedGroup>


                </RelativeLayout>





                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_id10"
                        android:layout_width="60dp"
                        android:layout_height="22dp"
                        android:paddingRight="13dp"
                        android:text="음주"
                        android:textSize="20dp" />


                    <Spinner
                        android:id="@+id/Spinner_drink"
                        android:layout_width="325dp"
                        android:layout_height="30dp"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_toEndOf="@+id/text_id10"
                        android:prompt="@string/blood_prompt">

                    </Spinner>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_id11"
                        android:layout_width="60dp"
                        android:layout_height="22dp"
                        android:paddingRight="13dp"
                        android:text="종교"
                        android:textSize="20dp" />


                    <Spinner
                        android:id="@+id/Spinner_religion"
                        android:layout_width="325dp"
                        android:layout_height="30dp"
                        android:layout_alignTop="@+id/text_id11"
                        android:layout_gravity="center"
                        android:layout_margin="3dp"
                        android:layout_toRightOf="@+id/text_id11"
                        android:prompt="@string/religion_prompt">

                    </Spinner>

                </RelativeLayout>






            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <Button
        android:id="@+id/next_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:onClick="onClick_Basicinfo_upload"
        android:text="다음"
        android:textSize="20sp"

        />

</RelativeLayout>