<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@android:color/transparent"
                android:padding="0sp"
                android:paddingTop="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/backbtn"
                android:onClick="onClick_back"


                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingTop="10dp"
                android:text="기본정보입력"
                android:textSize="20dp" />

        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
       >


        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="580dp"
            android:fillViewport="true"

            >

            <LinearLayout
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_marginTop="50dp">


                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/form_progressbar2"
                    android:layout_marginTop="50dp"/>


                <TextView
                    android:id="@+id/text_id"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:paddingRight="13dp"
                    android:text="성별"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="55dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <info.hoang8f.android.segmented.SegmentedGroup xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:orientation="horizontal"
                        segmentedgroup:sc_border_width="2dp"
                        segmentedgroup:sc_corner_radius="10dp">

                        <RadioButton
                            android:id="@+id/RadioMan"
                            style="@style/RadioButton"
                            android:layout_width="135dp"
                            android:layout_height="wrap_content"
                            android:text="남자" />

                        <RadioButton
                            android:id="@+id/RadioWoman"
                            style="@style/RadioButton"
                            android:layout_width="135dp"
                            android:layout_height="wrap_content"
                            android:text="여자" />

                    </info.hoang8f.android.segmented.SegmentedGroup>

                </LinearLayout>

                <TextView
                    android:id="@+id/text_id2"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="병역"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="55dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <info.hoang8f.android.segmented.SegmentedGroup xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/RadioArmy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:orientation="horizontal"
                        segmentedgroup:sc_border_width="2dp"
                        segmentedgroup:sc_corner_radius="10dp">

                        <RadioButton
                            android:id="@+id/Complete"
                            style="@style/RadioButton"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="군필" />

                        <RadioButton
                            android:id="@+id/InComplete"
                            style="@style/RadioButton"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="미필" />

                        <RadioButton
                            android:id="@+id/Notduty"
                            style="@style/RadioButton"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="해당없음" />
                    </info.hoang8f.android.segmented.SegmentedGroup>


                </LinearLayout>

                <TextView
                    android:id="@+id/text_id3"
                    android:layout_width="60dp"
                    android:layout_height="22dp"
                    android:text="커리어"
                    android:textSize="20dp" />


                <EditText
                    android:id="@+id/InputCarrea"
                    android:layout_width="325dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text=""
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/text_id4"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="나이"
                    android:textSize="20dp" />

                <Spinner
                    android:id="@+id/Spinner_age"
                    android:layout_width="325dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:prompt="@string/age_prompt"
                    android:layout_margin="3dp">

                </Spinner>

                <TextView
                    android:id="@+id/text_id5"
                    android:layout_width="60dp"
                    android:layout_height="22dp"
                    android:text="지역"
                    android:textSize="20dp" />


                <Spinner
                    android:id="@+id/Spinner_city"
                    android:layout_width="325dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:prompt="@string/blood_prompt"
                    android:layout_margin="3dp">

                </Spinner>


                <TextView
                    android:id="@+id/text_id6"
                    android:layout_width="60dp"
                    android:layout_height="22dp"
                    android:text="키"
                    android:textSize="20dp" />


                <EditText
                    android:id="@+id/InputTall"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:digits="0123456789"
                    android:inputType="number"
                    android:text=""
                    android:textSize="20dp" />


                <TextView
                    android:id="@+id/text_id8"
                    android:layout_width="60dp"
                    android:layout_height="22dp"
                    android:text="혈액형"
                    android:textSize="20dp" />


                <Spinner
                    android:id="@+id/Spinner_blood"
                    android:layout_width="325dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:prompt="@string/blood_prompt"
                    android:layout_margin="3dp">

                </Spinner>

                <TextView
                    android:id="@+id/text_id9"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="흡연"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="55dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <info.hoang8f.android.segmented.SegmentedGroup xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/Radio_smoking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:orientation="horizontal"
                        segmentedgroup:sc_border_width="2dp"
                        segmentedgroup:sc_corner_radius="10dp">

                        <RadioButton
                            android:id="@+id/smoking"
                            style="@style/RadioButton"
                            android:layout_width="135dp"
                            android:layout_height="wrap_content"
                            android:text="흡연" />

                        <RadioButton
                            android:id="@+id/Not_smoking"
                            style="@style/RadioButton"
                            android:layout_width="135dp"
                            android:layout_height="wrap_content"
                            android:text="비흡연" />

                    </info.hoang8f.android.segmented.SegmentedGroup>


                </LinearLayout>
                <TextView
                    android:id="@+id/text_id10"
                    android:layout_width="60dp"
                    android:layout_height="22dp"
                    android:text="음주"
                    android:textSize="20dp" />


                <Spinner
                    android:id="@+id/Spinner_drink"
                    android:layout_width="325dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:prompt="@string/blood_prompt"
                    android:layout_margin="3dp">

                </Spinner>

                <TextView
                    android:id="@+id/text_id11"
                    android:layout_width="60dp"
                    android:layout_height="22dp"
                    android:text="종교"
                    android:textSize="20dp" />


                <Spinner
                    android:id="@+id/Spinner_religion"
                    android:layout_width="325dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:prompt="@string/religion_prompt"
                    android:layout_margin="3dp">

                </Spinner>
            </LinearLayout>
        </ScrollView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bottom_btn"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">
            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:onClick="onClick_photo_upload"
                android:text="다음"
                android:textSize="20sp"
                android:layout_alignParentBottom="true"

              />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>