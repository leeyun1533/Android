<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.example.leeyun.stringting_android.MainActivity"
    android:weightSum="1">

    <LinearLayout
        android:id="@+id/topBlank_layout"
        android:layout_width="fill_parent"
        android:layout_height="70dp"

        android:orientation="horizontal">

    </LinearLayout>



    <LinearLayout
        android:id="@+id/logo_layout"
        android:layout_width="fill_parent"
        android:layout_height="150dp"


        >

        <ImageView
            android:id="@+id/logo_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/logo" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/middelBlank_layout"
        android:layout_width="fill_parent"
        android:layout_height="70dp"

        android:orientation="horizontal">

    </LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:paddingBottom="50dp">



            <TextView
                android:id="@+id/Provision_Linkify"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <com.facebook.login.widget.LoginButton
                    android:id="@+id/buttonId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:visibility="gone"

                    />


            </LinearLayout>


        <Button
            android:id="@+id/loginBtn"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@color/colorPrimary"
            android:text="커스텀 페이스북 로그인 버튼"
            android:textColor="#fff"

            />


        <com.kakao.usermgmt.LoginButton
            android:id="@+id/com_kakao_login"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            />

        <Button
            android:id="@+id/local_btn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:onClick="onClick_membership"
            android:text="이메일 계정으로 회원가입" />

        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:onClick="onClick_login_firstpage"
            android:paddingTop="10dp"
            android:text="기존회원 로그인"
            android:textSize="15sp"
            android:layout_gravity="center"
            />

    </LinearLayout>





</LinearLayout>

